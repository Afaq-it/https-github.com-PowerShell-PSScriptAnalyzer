root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
indent_size = 4

[*.ps*1]
charset = utf-8-bom
indent_size = 4

[*.yml]
indent_size = 2

[*.json]
indent_size = 4

[*.xml]
indent_size = 2

# Tests may need to use counterexamples for rules
[Tests/assets/**]
charset = unset
indent_style = unset
end_of_line = unset
trim_trailing_whitespace = unset
